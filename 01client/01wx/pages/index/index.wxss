.page {
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.nav{
  flex: 1;
  padding: 10rpx;
}
.nav .img{
  width: 100%;
  height: 400rpx;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 4rpx solid #f0f2f7;
}

.tab-item {
  width: 50%;
  text-align: center;
  font-size: 15px;
  color: #777;
}

.swiper {
  height: 600px;
}

.title {
  color: #bcbcbc;
  font-size: 31rpx;
}

.titleSelet {
  color: #171717;
  font-size: 36rpx;
  border-bottom: 5rpx solid #2066ff;
}

.content{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
   border-bottom: 4rpx solid #f0f2f7;
}
