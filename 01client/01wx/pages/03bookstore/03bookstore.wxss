/* pages/03bookstore/03bookstore.wxss */
.coursePackage{
  width: 700rpx;
  padding: 30rpx;
  margin: 30rpx 0;
}

.package{
  height: 200rpx;
  width: 690rpx;
  box-shadow: 5rpx 5rpx 5rpx #ccc;
  border-radius: 10rpx;
  margin: 50rpx 0;
  padding: 30rpx 10rpx;
  display: flex;
  flex-direction: row;
}

.img1{
  width: 220rpx;
  height: 200rpx;
}

.content1{
  width: 500rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title1{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.t0{
  font-size: 35rpx;
}

.t1{
  font-size: 30rpx;
  color: #B2B2B2;
}

.t2{
  font-size: 30rpx;
  color: #FF7950;
}

.price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.classify{
  width: 150rpx;
  height: 65rpx;
  line-height: 65rpx;
  display: inline-block;
  padding: 10rpx;
  border-top: #EEF0F5 1rpx solid;
  border-bottom: #EEF0F5 1rpx solid;
}

.headerBox{
  width: 700rpx;
  margin: 0 auto;
}

.classifyItem{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.title{
  font-size: 30rpx;
  color: #6E6E6E;
}

.titleSelect{
  font-size: 32rpx;
  color: #343331;
}

.baseline{
  padding: 20rpx;
  font-size: 30rpx;
  color: #B2B2B2;
  display: flex;
  flex-direction: row;
  justify-content: center;
}