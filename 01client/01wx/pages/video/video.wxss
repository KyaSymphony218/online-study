.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
}

.guide {
  width: 750rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.guideBar {
  
}

.guideBarPic {
  width: 100rpx;
  height: 100rpx;
}

.guide image {
  width: 100%;
  height: 100%;
}

.use {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1rpx solid #e3e4e8;
  border-top-right-radius: 25rpx;
  border-top-left-radius: 25rpx;
  box-shadow: 10rpx 10rpx 10rpx #e3e4e8;
}

.title {
  font-size: 50rpx;
  margin-bottom: 25rpx;
  color: orangered;
}

.head {
  width: 700rpx;
  height: 400rpx;
}

.head image{
  width: 100%;
  height: 100%;
}

.content {
  width: 650rpx;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  border: 1rpx solid #e3e4e8;
  border-radius: 25rpx;
  padding: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx #e3e4e8;
  margin-bottom: 30rpx;
}

.label {
  display: flex;
  flex-direction: row;
}

.feature {
  background: #e8eaff;
  color: #798dfd;
  margin-right: 20rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
}

.imgBox {
  width: 300rpx;
  height: 300rpx;
}

.imgBox image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.textBox {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 20rpx;
}

.textBox .title {
  font-size: 38rpx;
  margin-bottom: 10rpx;
  color: orange;
}

.author {
  font-size: 30rpx;
  color: #999;
}

.chapter {
  font-size: 30rpx;
  color: #999;
}
